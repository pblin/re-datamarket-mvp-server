{
  "compilerOptions": {
       // types option has been previously configured
       "types": ["node"],
     // typeRoots option has been previously configured
     "typeRoots": [
        // add path to @types
        "node_modules/@types"
     ],
      "module": "commonjs",
      "lib": [ "es2017" ],
      "target": "es2017",
      "noImplicitAny": false,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
      }
  },
  "include": [
      "src/**/*"
  ]
}
